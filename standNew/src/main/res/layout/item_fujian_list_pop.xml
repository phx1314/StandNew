<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingRight="@dimen/j5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/j150dp"
        android:background="@drawable/bj_fj"
        android:orientation="vertical"
        android:padding="@dimen/j5dp">

        <TextView
            android:id="@+id/mTextView_sp"
            style="@style/text_style_15_black"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/shipin"
            android:drawablePadding="@dimen/j5dp"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/j3dp"
            android:text="视频文件" />

        <TextView
            android:id="@+id/mTextView_yp"
            style="@style/text_style_15_black"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/yinpin"
            android:drawablePadding="@dimen/j5dp"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/j3dp"
            android:text="音频文件" />

        <TextView
            android:id="@+id/mTextView_wz"
            style="@style/text_style_15_black"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_gps_fixed_black_24dp"
            android:drawablePadding="@dimen/j5dp"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/j3dp"
            android:text="当前位置" />

        <TextView
            android:id="@+id/mTextView_pic"
            style="@style/text_style_15_black"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/weizhi"
            android:drawablePadding="@dimen/j5dp"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/j3dp"
            android:text="图片拍照" />

        <TextView
            android:id="@+id/mTextView_more"
            style="@style/text_style_15_black"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/more"
            android:drawablePadding="@dimen/j5dp"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/j3dp"
            android:text="更多" />
    </LinearLayout>
</LinearLayout>

