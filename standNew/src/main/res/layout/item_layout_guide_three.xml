<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/page_three_text"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/guide3_text"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <View
            android:id="@+id/center"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/page_three_center_bg"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_above="@+id/center"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-40dp"
            android:background="@drawable/guide3_bg" />

        <ImageView
            android:id="@+id/page_three_phone"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_above="@+id/center"
            android:layout_centerHorizontal="true"
            android:src="@drawable/guide3_pic"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="60dp"
            android:background="@drawable/btn_welcome"
            android:text="立即体验"
            android:textColor="#62AEE1"
            android:visibility="invisible" />


    </RelativeLayout>

</LinearLayout>