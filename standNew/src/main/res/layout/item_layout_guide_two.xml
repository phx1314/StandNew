<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/page_two_text"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/j50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/guide2_text"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/j40dp"
        android:orientation="vertical">

        <View
            android:id="@+id/center"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/page_two_center_bg"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_above="@+id/center"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-40dp"
            android:background="@drawable/guide2_bg" />

        <ImageView
            android:id="@+id/page_two_center_chat"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_above="@+id/center"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:src="@drawable/guide2_chat"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/page_two_item1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/center"
            android:layout_marginBottom="100dp"
            android:layout_marginRight="110dp"
            android:layout_toLeftOf="@+id/center"
            android:src="@drawable/guide2_item1"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/page_two_item2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/center"
            android:layout_marginBottom="150dp"
            android:layout_marginRight="70dp"
            android:layout_toLeftOf="@+id/center"
            android:src="@drawable/guide2_item2"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/page_two_item3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/center"
            android:layout_marginBottom="190dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/center"
            android:src="@drawable/guide2_item3"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/page_two_item4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_above="@+id/center"
            android:layout_marginBottom="-120dp"
            android:layout_marginLeft="0dp"
            android:layout_toRightOf="@+id/center"
            android:src="@drawable/guide2_item4"
            android:visibility="invisible" />


    </RelativeLayout>

</LinearLayout>