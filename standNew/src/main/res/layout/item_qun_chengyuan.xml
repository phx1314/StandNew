<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mLinearLayout_geren"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_k"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/j1_5dp">

            <com.mdx.framework.widget.MImageView
                android:id="@+id/mMImageView"
                android:layout_width="@dimen/j35dp"
                android:layout_height="@dimen/j35dp"
                android:src="@drawable/morentouxiang_n" />
        </LinearLayout>

        <TextView
            android:id="@+id/mTextView_name"
            style="@style/text_style_13_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/j5dp"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mLinearLayout_more"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_k"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/j1_5dp">

            <com.mdx.framework.widget.MImageView
                android:layout_width="@dimen/j35dp"
                android:layout_height="@dimen/j35dp"
                android:src="@drawable/yslt_ic_morequn_n" />
        </LinearLayout>

        <TextView
            style="@style/text_style_13_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/j5dp"
            android:text="更多" />
    </LinearLayout>
</LinearLayout>

