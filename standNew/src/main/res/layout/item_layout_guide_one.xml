<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/page_one_text"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/j50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/guide1_text"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/j40dp"
        android:orientation="vertical">

        <View
            android:id="@+id/center"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/page_one_center_bg"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_above="@+id/center"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-40dp"
            android:background="@drawable/guide1_bg" />

        <ImageView
            android:id="@+id/page_one_center_hand"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_above="@+id/center"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-40dp"
            android:src="@drawable/guide1_hand"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/page_one_item1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/center"
            android:layout_marginBottom="130dp"
            android:layout_marginRight="90dp"
            android:layout_toLeftOf="@+id/center"
            android:src="@drawable/guide1_item1"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/page_one_item2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/center"
            android:layout_marginBottom="170dp"
            android:layout_marginRight="50dp"
            android:layout_toLeftOf="@+id/center"
            android:src="@drawable/guide1_item2"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/page_one_item3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/center"
            android:layout_marginBottom="190dp"
            android:layout_marginRight="0dp"
            android:layout_toLeftOf="@+id/center"
            android:src="@drawable/guide1_item3"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/page_one_left"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/page_one_center_bg"
            android:layout_marginBottom="30dp"
            android:layout_toLeftOf="@+id/page_one_center_bg"
            android:src="@drawable/guide1_left" />

        <ImageView
            android:id="@+id/page_one_right"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_above="@+id/center"
            android:layout_marginBottom="-50dp"
            android:layout_marginLeft="90dp"
            android:layout_toRightOf="@+id/center"
            android:src="@drawable/guide1_right" />
    </RelativeLayout>


</LinearLayout>

