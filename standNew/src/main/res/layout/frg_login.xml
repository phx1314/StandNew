<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/mLinearLayout_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/j45dp"
                    android:background="@drawable/logo2" />

                <TextView
                    style="@style/text_style_17_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/j10dp"
                    android:text="@string/app_name"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <EditText
                android:id="@+id/mEditText_yhm"
                style="@style/text_style_15_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/j35dp"
                android:layout_marginRight="@dimen/j35dp"
                android:layout_marginTop="@dimen/j40dp"
                android:background="#00000000"
                android:drawableLeft="@drawable/yhm"
                android:drawablePadding="@dimen/j10dp"
                android:gravity="center_vertical"
                android:hint="请输入用户名"
                android:singleLine="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/j30dp"
                android:layout_marginRight="@dimen/j30dp"
                android:layout_marginTop="@dimen/j15dp"
                android:background="@color/tyD1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/j35dp"
                android:layout_marginRight="@dimen/j35dp"
                android:layout_marginTop="@dimen/j20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/mEditText_mm"
                    style="@style/text_style_15_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/j5dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:drawableLeft="@drawable/mm"
                    android:drawablePadding="@dimen/j10dp"
                    android:gravity="center_vertical"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:singleLine="true" />

                <ImageView
                    android:id="@+id/mImageView_kan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mima1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/j35dp"
                android:layout_marginRight="@dimen/j35dp"
                android:layout_marginTop="@dimen/j20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <EditText
                    android:id="@+id/mEditText_yahzengma"
                    style="@style/text_style_15_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/j5dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:drawableLeft="@drawable/yzm"
                    android:drawablePadding="@dimen/j10dp"
                    android:gravity="center_vertical"
                    android:hint="请输入验证码"
                    android:inputType="textPassword"
                    android:singleLine="true" />

                <ImageView
                    android:id="@+id/mImageView_get"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/yzm1" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="@dimen/j25dp"
                android:layout_marginLeft="@dimen/j30dp"
                android:layout_marginRight="@dimen/j30dp"
                android:layout_marginTop="@dimen/j15dp"
                android:background="@color/tyD1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/j40dp"
                android:layout_marginLeft="@dimen/j35dp"
                android:layout_marginRight="@dimen/j35dp"
                android:layout_marginTop="@dimen/j15dp"
                android:background="@drawable/shape_blue_cnm">

                <TextView
                    android:id="@+id/mImageView_dl"
                    style="@style/text_style_15_white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/j40dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:padding="@dimen/j6dp"
                    android:text="登 录" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/j15dp"
                android:layout_marginTop="@dimen/j20dp"
                android:text="Powerder by JinQu SoftWare" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

