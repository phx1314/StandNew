<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/j8dp"
        android:background="#f2f2f2" />

    <LinearLayout
        android:id="@+id/mLinearLayout_hf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/j12dp"
            android:paddingRight="@dimen/j12dp"
            android:paddingTop="@dimen/j10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_k"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/j1_5dp">

                    <com.mdx.framework.widget.MImageView
                        android:id="@+id/mMImageView_touxiang"
                        android:layout_width="@dimen/j35dp"
                        android:layout_height="@dimen/j35dp"
                        android:src="@drawable/morentouxiang_n" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/j8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mTextView_name"
                        style="@style/text_style_13_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/mTextView_time"
                        style="@style/text_style_11_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/j2dp"
                        android:gravity="right"
                        android:singleLine="true" />
                </LinearLayout>

                <TextView
                    android:id="@+id/mTextView_content"
                    style="@style/text_style_13_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/j10dp"
                    android:layout_marginRight="@dimen/j8dp"
                    android:layout_marginTop="@dimen/j8dp"
                    android:text="@string/test" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/mImageView_lz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_lz" />
    </LinearLayout>
</LinearLayout>

